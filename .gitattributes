# Go language files
*.go linguist-language=Go

# Template files - exclude from language detection
*.mustache linguist-generated=true
templates/ linguist-vendored=true

# Generated specifications - exclude from language detection
specs/ linguist-generated=true
generator-configs/ linguist-generated=true

# Sample HTML files - mark as documentation
samples/ linguist-documentation=true
*.html linguist-documentation=true

# Configuration files
*.yaml linguist-detectable=false
*.yml linguist-detectable=false
*.json linguist-detectable=false

# Package files
package-lock.json linguist-generated=true
go.sum linguist-generated=true

# History and documentation
history/ linguist-documentation=true
README.md linguist-documentation=true 